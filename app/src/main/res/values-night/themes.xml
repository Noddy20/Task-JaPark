<resources>
    <!-- Base application theme. -->
    <style name="Theme.JaPark" parent="Theme.JaPark.BaseTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorDark</item>
        <item name="colorPrimaryVariant">@color/colorDarkX</item>
        <item name="colorOnPrimary">@color/colorDark</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/colorDark</item>


        <item name="colorTextDark">@color/colorLightX</item>
        <item name="colorTextMain">@color/colorTextDark</item>
        <item name="colorTextPrimary">@color/colorDark</item>

    </style>


    <!-- Theme for Dialog-Style Activity -->

    <style name="Theme.JaPark.DialogActivity" parent="Theme.MaterialComponents.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowBackground">@color/colorTransparent</item>

        <item name="colorPrimary">@color/colorDark</item>
        <item name="colorTextMain">@color/colorTextDark</item>
    </style>

</resources>