<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JaPark.BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?colorPrimary</item>
        <!--<item name="android:navigationBarColor">?colorPrimary</item>-->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>

        <item name="toolbarStyle">@style/Theme.JaPark.Toolbar</item>
        <item name="actionBarTheme">@style/Theme.JaPark.AppBarLayout</item>
        <item name="actionOverflowButtonStyle">@style/Theme.JaPark.ActionOverflowButtonStyle</item>
        <item name="actionOverflowMenuStyle">@style/Theme.JaPark.ActionOverflowStyle</item>

        <item name="materialAlertDialogTheme">@style/Theme.JaPark.AlertDialogMaterialTheme</item>

    </style>


    <style name="Theme.JaPark" parent="Theme.JaPark.BaseTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorLight</item>
        <item name="colorPrimaryVariant">@color/colorLightX</item>
        <item name="colorOnPrimary">@color/colorLight</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/colorLight</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="colorTextDark">@color/colorBlack</item>
        <item name="colorTextMain">@color/colorTextLight</item>
        <item name="colorTextPrimary">@color/colorWhite</item>

    </style>

    <style name="Theme.JaPark.DialogActivity" parent="Base.Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowBackground">@color/colorTransparent</item>

        <item name="colorPrimary">@color/colorLight</item>
        <item name="colorTextMain">@color/colorTextLight</item>

    </style>

</resources>