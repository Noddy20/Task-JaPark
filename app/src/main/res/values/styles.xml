<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- View Click Style-->

    <style name="Theme.JaPark.ClickableWithinBorder">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>


    <!-- AppBar, Toolbar and PopupMenu Styles -->

    <style name="Theme.JaPark.Toolbar" parent="Widget.MaterialComponents.Toolbar" >
        <item name="android:background">?colorPrimary</item>
        <item name="colorControlHighlight">?colorTextMain</item>
        <item name="colorControlNormal">?colorTextMain</item>
    </style>

    <style name="Theme.JaPark.ActionOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?colorTextMain</item>
        <item name="tint">?colorTextMain</item>
    </style>

    <style name="Theme.JaPark.ActionOverflowStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">?colorPrimaryVariant</item>
    </style>

    <style name="Theme.JaPark.AppBarLayout" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <!-- Customize the AppBarLayout -->
        <item name="android:textColorPrimary">?colorTextMain</item>
        <item name="android:textColorSecondary">?colorTextMain</item>
        <item name="actionMenuTextColor">?colorTextMain</item>
    </style>



    <!-- Material Dialog Styles -->

    <style name="Theme.JaPark.AlertDialogMaterialTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">?colorPrimary</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
        <item name="materialAlertDialogTitleTextStyle">@style/Alert.TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/Alert.BodyTextStyle</item>
        <item name="shapeAppearanceOverlay">@style/Alert.ShapeAppearanceOverlay.Dialog.Rounded</item>
    </style>

    <style name="Alert.TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">?colorTextMain</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Alert.BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">?colorTextMain</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <!--<item name="android:fillColor">@color/colorTransparent</item>-->
        <item name="android:textColor">?colorTextMain</item>
        <item name="strokeColor">@color/colorTransparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="rippleColor">?colorPrimaryVariant</item>
    </style>

    <style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorTransparent</item>
        <item name="android:textColor">?colorTextMain</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="rippleColor">?colorPrimaryVariant</item>
    </style>

    <style name="Alert.ShapeAppearanceOverlay.Dialog.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

</resources>